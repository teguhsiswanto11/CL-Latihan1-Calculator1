<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <RelativeLayout
            android:id="@+id/atas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/textLayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="82dp"
                android:gravity="right|center_vertical"
                android:background="#fff"
                android:textColor="#000"
                android:padding="0dp"
                android:textSize="48sp"
                android:fontFamily="@font/oxygen"/>

        <TextView
                android:id="@+id/textLayer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:gravity="right|center_vertical"
                android:layout_below="@+id/textLayer"
                android:background="#fff"
                android:textColor="#000"
                android:textSize="36sp"
                android:fontFamily="@font/oxygen"
        />
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/bawah"
            android:layout_below="@id/atas"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
                android:id="@+id/btnNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff">
            <TextView
                    android:id="@+id/divider"
                    android:layout_toRightOf="@+id/btnClear"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:minHeight="400dp"
                    android:background="#fafafa"
                    android:layout_alignParentBottom="true"

            />
            <Button
                    android:id="@+id/btnOpenParenthesis"
                    android:layout_width="96dp"
                    android:layout_height="80dp"
                    android:textColor="#2196F3"
                    android:background="#fafafa"
                    android:layout_above="@id/btnSeven"
                    android:textSize="30sp"
                    android:fontFamily="@font/oxygen"
                    android:onClick="btnOpenPClicked"
                    android:text="("/>
            <Button
                    android:id="@+id/btnCloseParenthesis"
                    android:layout_width="96dp"
                    android:layout_height="80dp"
                    android:textColor="#2196F3"
                    android:background="#fafafa"
                    android:layout_toRightOf="@id/btnOpenParenthesis"
                    android:layout_above="@id/btnEight"
                    android:textSize="30sp"
                    android:fontFamily="@font/oxygen"
                    android:onClick="btnClosePClicked"
                    android:text=")"/>
            <Button
                    android:id="@+id/btnClear"
                    android:layout_width="96dp"
                    android:layout_height="80dp"
                    android:textColor="#2196F3"
                    android:background="#fafafa"
                    android:layout_toRightOf="@id/btnCloseParenthesis"
                    android:layout_above="@id/btnNine"
                    android:textSize="30sp"
                    android:fontFamily="@font/oxygen"
                    android:onClick="btnClearClicked"
                    android:text="C"/>

            <Button
                    android:id="@+id/btnSeven"
                    android:layout_width="96dp"
                    android:layout_height="80dp"
                    android:layout_above="@id/btnFour"
                    android:textSize="36sp"
                    android:fontFamily="@font/oxygen"
                    android:background="#fafafa"
                    android:onClick="btn7Clicked"
                    android:text="7"/>
            <Button
                    android:id="@+id/btnEight"
                    android:layout_width="96dp"
                    android:layout_height="80dp"
                    android:layout_toRightOf="@id/btnSeven"
                    android:layout_above="@id/btnFive"
                    android:textSize="36sp"
                    android:fontFamily="@font/oxygen"
                    android:background="#fafafa"
                    android:onClick="btn8Clicked"
                    android:text="8"/>
            <Button
                    android:id="@+id/btnNine"
                    android:layout_width="96dp"
                    android:layout_height="80dp"
                    android:layout_toRightOf="@id/btnEight"
                    android:layout_above="@id/btnSix"
                    android:textSize="36sp"
                    android:fontFamily="@font/oxygen"
                    android:background="#fafafa"
                    android:onClick="btn9Clicked"
                    android:text="9"/>

            <Button
                    android:id="@+id/btnFour"
                    android:layout_width="96dp"
                    android:layout_height="80dp"
                    android:layout_above="@id/btnOne"
                    android:textSize="36sp"
                    android:fontFamily="@font/oxygen"
                    android:background="#fafafa"
                    android:onClick="btn4Clicked"
                    android:text="4"/>
            <Button
                    android:id="@+id/btnFive"
                    android:layout_width="96dp"
                    android:layout_height="80dp"
                    android:layout_toRightOf="@id/btnFour"
                    android:layout_above="@id/btnTwo"
                    android:textSize="36sp"
                    android:fontFamily="@font/oxygen"
                    android:background="#fafafa"
                    android:onClick="btn5Clicked"
                    android:text="5"/>
            <Button
                    android:id="@+id/btnSix"
                    android:layout_width="96dp"
                    android:layout_height="80dp"
                    android:layout_toRightOf="@id/btnFive"
                    android:layout_above="@id/btnThree"
                    android:textSize="36sp"
                    android:fontFamily="@font/oxygen"
                    android:background="#fafafa"
                    android:onClick="btn6Clicked"
                    android:text="6"/>


            <Button
                    android:id="@+id/btnOne"
                    android:layout_width="96dp"
                    android:layout_height="80dp"
                    android:layout_above="@+id/btnZero"
                    android:textSize="36sp"
                    android:fontFamily="@font/oxygen"
                    android:background="#fafafa"
                    android:onClick="btn1Clicked"
                    android:text="1"/>
            <Button
                    android:id="@+id/btnTwo"
                    android:layout_width="96dp"
                    android:layout_height="80dp"
                    android:layout_toRightOf="@id/btnOne"
                    android:layout_above="@id/btnDot"
                    android:textSize="36sp"
                    android:fontFamily="@font/oxygen"
                    android:background="#fafafa"
                    android:onClick="btn2Clicked"
                    android:text="2"/>
            <Button
                    android:id="@+id/btnThree"
                    android:layout_width="96dp"
                    android:layout_height="80dp"
                    android:layout_toRightOf="@id/btnTwo"
                    android:layout_above="@id/btnEqual"
                    android:textSize="36sp"
                    android:fontFamily="@font/oxygen"
                    android:background="#fafafa"
                    android:onClick="btn3Clicked"
                    android:text="3" />

            <Button
                    android:id="@+id/btnZero"
                    android:layout_width="96dp"
                    android:layout_height="80dp"
                    android:textSize="36sp"
                    android:fontFamily="@font/oxygen"
                    android:layout_alignParentBottom="true"
                    android:background="#fafafa"
                    android:onClick="btn0Clicked"
                    android:text="0"/>
            <Button
                    android:id="@+id/btnDot"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/btnZero"
                    android:layout_width="96dp"
                    android:layout_height="80dp"
                    android:textSize="36sp"
                    android:fontFamily="@font/oxygen"
                    android:background="#fafafa"
                    android:onClick="btnDotClicked"
                    android:text="."/>
            <Button
                    android:id="@+id/btnEqual"
                    android:layout_width="96dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/btnDot"
                    android:layout_height="80dp"
                    android:textSize="36sp"
                    android:fontFamily="@font/oxygen"
                    android:background="#fafafa"
                    android:onClick="btnEqualClicked"
                    android:text="="/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/operators"
                android:layout_toRightOf="@+id/btnNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff"
        >
            <TextView
                    android:id="@+id/btnDelete"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_above="@id/btnDivide"
                    android:background="#fafafa"
                    android:onClick="btnDelClicked"
                    android:text="\u232b"
                    android:textColor="#2196F3"
                    android:textSize="30sp"
                    android:gravity="center"
            />
            <Button
                    android:id="@+id/btnDivide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="80dp"
                    android:layout_above="@+id/btnMultiplication"
                    android:background="#fafafa"
                    android:onClick="btnDivideClicked"
                    android:textColor="#2196F3"
                    android:text="\u00F7"
                    android:textSize="30sp"
                    android:fontFamily="@font/oxygen"
            />
            <Button
                    android:id="@+id/btnMultiplication"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="80dp"
                    android:textSize="18sp"
                    android:layout_above="@+id/btnMinus"
                    android:textColor="#2196F3"
                    android:background="#fafafa"
                    android:onClick="btnMultiplicationClicked"
                    android:text="x"/>
            <Button
                    android:id="@+id/btnMinus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="80dp"
                    android:textSize="30sp"
                    android:fontFamily="@font/oxygen"
                    android:layout_above="@id/btnPlus"
                    android:textColor="#2196F3"
                    android:background="#fafafa"
                    android:onClick="btnMinusClicked"
                    android:text="-"/>
            <Button
                    android:id="@+id/btnPlus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="80dp"
                    android:textSize="30sp"
                    android:fontFamily="@font/oxygen"
                    android:layout_alignParentBottom="true"
                    android:textColor="#2196F3"
                    android:background="#fafafa"
                    android:layout_gravity="center"
                    android:onClick="btnPlusClicked"
                    android:text="+"
                    android:layout_alignParentEnd="true"
            />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>